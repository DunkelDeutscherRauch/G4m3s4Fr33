<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- rounded corners style for imageView -->

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- main style for button -->

    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/vwBlackMetallic</item>
        <item name="android:textColor">@color/mySilver</item>
        <item name="strokeColor">@color/imBlue</item>
        <item name="strokeWidth">4dp</item>
        <item name="cornerRadius">96dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- style for editButton -->

    <style name="editButtonStyle">
        <item name="android:padding">4dp</item>
        <item name="backgroundTint">@color/vwBlackMetallic</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/mySilver</item>
        <item name="strokeColor">@color/imBlue</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- main style for alertDialog -->

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:backgroundTint">@color/vwBlackMetallic</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positiveButtonText</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/neutralButtonText</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/negativeButtonText</item>
    </style>
    <style name="positiveButtonText">
        <item name="android:textColor">@color/imBlue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="neutralButtonText">
        <item name="android:textColor">@color/imBlue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="negativeButtonText">
        <item name="android:textColor">@color/imBlue</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>