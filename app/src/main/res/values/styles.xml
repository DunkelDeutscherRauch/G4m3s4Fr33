<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <!-- TODO <style name="buttonStyle" parent="Widget.MaterialComponents.Button"> -->
    <style name="buttonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">48dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@color/vwBlackMetallic</item>
        <item name="android:textColor">@color/mySilver</item>
        <item name="strokeColor">@color/imBlue</item>
        <item name="strokeWidth">4dp</item>
        <item name="cornerRadius">96dp</item>
        <item name="elevation">8dp</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:backgroundTint">@color/imBlue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/positiveButtonText</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/negativeButtonText</item>
    </style>
    <style name="positiveButtonText">
        <item name="android:textColor">@color/vwBlackMetallic</item>
        <item name="cornerRadius">8dp</item>
    </style>
    <style name="negativeButtonText">
        <item name="android:textColor">@color/vwBlackMetallic</item>
        <item name="cornerRadius">8dp</item>
    </style>
</resources>